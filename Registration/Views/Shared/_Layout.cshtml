<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/bundles/modernizr")

    <script src="/Scripts/script.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="container-wrapper">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @if (HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString() == "Result")
                        {
                            @Html.ActionLink("Розпочати тест", "Index", "Test", new { area = "" }, new { @class = "navbar-brand" })
                        }

                    </div>

                    <div class="navbar-header__user">@User.Identity.Name</div>

                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Вихід", "Logout", "Account")</li>
                        </ul>
                    </div>
                </div>
            }
            else
            {
                @Html.ActionLink("Реєстрація", "Register", "Account", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Вхід", "Login", "Account", new { area = "" }, new { @class = "navbar-brand" })
            }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
